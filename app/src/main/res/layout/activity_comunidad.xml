<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarillo_upn">

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <androidx.cardview.widget.CardView
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#2781C6"
            android:layout_marginBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <!-- Texto "Configuración" centrado -->
                <TextView
                    android:id="@+id/tvcomunidad"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Comunidad UPN"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:id="@+id/barra"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_search"
                    app:tint="#888888" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Buscar Publicaciones..."
                    android:background="@android:color/transparent"
                    android:paddingStart="8dp"
                    android:textColor="#000000"
                    android:textColorHint="#AAAAAA"
                    android:inputType="text" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_below="@id/barra"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Ejemplo de tarjeta de publicación -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/redondeado"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circulo_azul"
                            android:gravity="center"
                            android:text="ML"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="María López - Ingenieria en Sistemas"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hace 2 horas"
                                android:textColor="#777777"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="emoji"
                            android:src="@drawable/dieta" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="¡Compartiendo mi receta favorita de bowl proteico! Perfecto para después del entrenamiento."
                        android:textSize="18sp"

                        android:textColor="@color/gris_upn"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/corazon"
                            app:tint="#E74C3C" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="16dp"
                            android:text="24"
                            android:textColor="#000000" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/comentario"
                            app:tint="#888888" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="16dp"
                            android:text="8"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guardar receta"
                            android:textColor="#2196F3"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
                <!-- Ejemplo de tarjeta de publicación -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/redondeado"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circulo_azul"
                            android:gravity="center"
                            android:text="MR"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mauricio Ramos - Ingenieria Civil"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hace 5 horas"
                                android:textColor="#777777"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="emoji"
                            android:src="@drawable/dieta" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="¡Ejercicio alucinante!Ayer corri 2 horas bajo el sol,vomite tanto que perdi 1 kilo,me llevaron al hospital ,lamentablemente me retitare de la  universidad :c"
                        android:textSize="18sp"

                        android:textColor="@color/gris_upn"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/corazon"
                            app:tint="#E74C3C" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="16dp"
                            android:text="2"
                            android:textColor="#000000" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/comentario"
                            app:tint="#888888" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="16dp"
                            android:text="12"
                            android:textColor="#000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guardar receta"
                            android:textColor="#2196F3"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/publicacionesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Aquí se agregarán las publicaciones dinámicamente -->
                </LinearLayout>

                <!-- Agregar más tarjetas según sea necesario -->

                <!-- Tendencias -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tendencias"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="start"
                    android:layout_marginBottom="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#RecetasSaludables"
                        android:background="#D0F0FF"
                        android:padding="8dp"
                        android:textColor="#000000"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#MeditaciónDiaria"
                        android:background="#FFE9C6"
                        android:padding="8dp"
                        android:textColor="#000000"
                        android:layout_marginEnd="8dp" />

                    <!-- Agrega más etiquetas si lo deseas -->


                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btnAgregarPublicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="16dp"
                        android:src="@drawable/comentario"
                        android:contentDescription="Agregar publicación"
                        app:backgroundTint="@color/blue"
                        app:tint="@android:color/white" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_marginTop="250dp"
            android:orientation="horizontal"
            android:padding="0dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/inicioButton"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/botoninactivo"
                android:paddingHorizontal="10dp"
                android:paddingVertical="16dp"
                android:text="Inicio"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textAllCaps="false"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nutricionButton"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/botoninactivo"
                android:paddingHorizontal="1dp"
                android:paddingVertical="1dp"
                android:text="Nutrición"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textAllCaps="false"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ejercicioButton"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/botoninactivo"
                android:paddingHorizontal="1dp"
                android:paddingVertical="1dp"
                android:text="Actividad"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textAllCaps="false"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mentalButton"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/botoninactivo"
                android:paddingHorizontal="1dp"
                android:paddingVertical="1dp"
                android:text="Mental"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textAllCaps="false"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/comunidadButton"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/circulo_azul"
                android:paddingHorizontal="1dp"
                android:paddingVertical="1dp"
                android:text="Comunidad"
                android:textColor="@android:color/black"
                android:textSize="13dp"
                android:textStyle="bold"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
