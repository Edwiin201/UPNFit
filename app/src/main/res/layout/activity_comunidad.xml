<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarillo_upn">

    <!-- CONTENIDO SCROLLEABLE -->
    <ScrollView
        android:id="@+id/scrollContenido"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/menuInferior">

        <LinearLayout
            android:id="@+id/mainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="30dp">

            <!-- HEADER -->
            <androidx.cardview.widget.CardView
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#2781C6"
                android:layout_marginBottom="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:id="@+id/tvcomunidad"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Comunidad UPN"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:layout_centerInParent="true" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <!-- SEARCH BAR -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:id="@+id/barra"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_search"
                        app:tint="#888888" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="Buscar Publicaciones..."
                        android:background="@android:color/transparent"
                        android:paddingStart="8dp"
                        android:textColor="#000000"
                        android:textColorHint="#AAAAAA"
                        android:inputType="text"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- CONTENEDOR DINÁMICO -->
            <LinearLayout
                android:id="@+id/publicacionesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">

            </LinearLayout>


            <!-- TENDENCIAS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tendencias"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginBottom="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#RecetasSaludables"
                    android:background="#D0F0FF"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#MeditaciónDiaria"
                    android:background="#FFE9C6"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btnAgregarPublicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:src="@drawable/comentario"
                    android:contentDescription="Agregar publicación"
                    app:backgroundTint="@color/blue"
                    app:tint="@android:color/white"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <!-- MENÚ INFERIOR FIJO -->
    <LinearLayout
        android:id="@+id/menuInferior"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="0dp"
        android:background="@color/amarillo_upn">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/inicioButton"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_marginLeft="9dp"

            android:layout_marginTop="7dp"
            android:background="@drawable/botoninactivo"
            android:text="Inicio"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textAllCaps="false"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nutricionButton"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/botoninactivo"
            android:text="Nutrición"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textAllCaps="false"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ejercicioButton"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/botoninactivo"
            android:text="Actividad"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textAllCaps="false"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mentalButton"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/botoninactivo"
            android:text="Mental"
            android:textColor="@android:color/black"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textAllCaps="false"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/comunidadButton"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/circulo_azul"
            android:text="Comunidad"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="13dp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>

