<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/amarillo_upn"



    tools:context=".actividades.MenuActivity">

  <LinearLayout
      android:id="@+id/mainContainer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:orientation="vertical"
      android:padding="15dp"
      android:radius="12dp"
      >

    <!-- Header -->
    <androidx.cardview.widget.CardView
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="600dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#84BF41"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="48dp"
          android:paddingStart="16dp"
          android:paddingEnd="16dp">

        <!-- Texto "Configuraci칩n" centrado -->

        <ImageButton
            android:id="@+id/configuracion"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_settings"
            android:contentDescription="Configuraci칩n"
            app:tint="#FFFFFF"
            android:background="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/tvmeditacion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Bienvenido a UPNFIT"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
      </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginTop="12dp"
        android:background="#EAF6E5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical">

        <TextView
            android:id="@+id/textoBienvenida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="춰Buen d칤a, Carlos!"
            android:textColor="#2E7D32"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtObjetivosMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tus objetivos:"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"/>
      </LinearLayout>

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/btnmenuPerfil"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:background="@drawable/circulo_verde"
          android:textColor="@color/white"
          android:text="CP"
          android:textAllCaps="false"
          android:textSize="30dp"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Resumen Diario"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:background="@drawable/redondeado"
        android:backgroundTint="@color/white"
        >

      <TextView
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="50dp"
          android:background="@drawable/circulo_verde"
          android:gravity="center"
          android:padding="16dp"
          android:text="1200\nCal"
          android:textColor="@color/black"
          android:textSize="14sp" />

      <TextView
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:layout_marginTop="10dp"
          android:layout_marginRight="50dp"
          android:background="@drawable/circulo_azul"
          android:gravity="center"
          android:padding="16dp"
          android:text="6/8\nPasos"
          android:textColor="@color/black"
          android:textSize="14sp" />

      <TextView
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:layout_marginTop="10dp"
          android:background="@drawable/circulo_morado"
          android:gravity="center"
          android:padding="16dp"
          android:text="45/60\nmin"
          android:textColor="@color/black"
          android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Consejo Diario"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvConsejoDia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:padding="10dp"
        android:text="Cargando consejo del d칤a..."
        android:textColor="#4CAF50"
        android:textSize="19sp"
        android:background="@drawable/fondo_consejo"
        android:textAlignment="center"
        android:elevation="2dp"/>

    <!-- Acciones r치pidas -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

      <!-- T칤tulo -->

      <!-- Estado de 츼nimo -->
      <TextView
          android:id="@+id/tvTitulo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Acciones r치pidas"
          android:textSize="20sp"
          android:textStyle="bold"
          android:textColor="@color/black"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <com.google.android.material.card.MaterialCardView
          android:id="@+id/cardAnimo"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:cardCornerRadius="12dp"
          app:strokeWidth="2dp"
          app:strokeColor="@color/white"
          android:layout_margin="8dp"
          app:layout_constraintTop_toBottomOf="@id/tvTitulo"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toStartOf="@id/cardComida"
          app:layout_constraintWidth_percent="0.48">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@color/white"
            >


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Estado de 츼nimo"
              android:textColor="@color/black"
              android:textStyle="bold" />

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="游땛 "
                android:textSize="24sp" />

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/circulo_negro" />

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/circulo_negro" />
          </LinearLayout>
        </LinearLayout>
      </com.google.android.material.card.MaterialCardView>

      <!-- Pr칩xima Comida -->
      <com.google.android.material.card.MaterialCardView
          android:id="@+id/cardComida"
          android:layout_width="165dp"
          android:layout_height="90dp"
          app:cardCornerRadius="12dp"
          app:strokeWidth="2dp"
          app:strokeColor="#e67e22"
          android:layout_margin="1dp"
          app:layout_constraintTop_toTopOf="@id/cardAnimo"
          app:layout_constraintStart_toEndOf="@id/cardAnimo"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintWidth_percent="0.48">

        <LinearLayout
            android:layout_width="158dp"
            android:layout_height="125dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@color/white">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Pr칩xima Comida"
              android:textColor="@color/black"
              android:textStyle="bold" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Almuerzo: 12:30"
              android:textColor="@color/black"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Ensalada de pollo"
              android:textColor="@color/black"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="450 calor칤as"
              android:textColor="@color/black"/>

        </LinearLayout>
      </com.google.android.material.card.MaterialCardView>

      <!-- Actividad F칤sica -->
      <com.google.android.material.card.MaterialCardView
          android:id="@+id/cardActividad"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:cardCornerRadius="12dp"
          app:strokeWidth="2dp"
          app:strokeColor="#d291bc"
          android:layout_margin="8dp"
          app:layout_constraintTop_toBottomOf="@id/cardAnimo"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toStartOf="@id/cardMind"
          app:layout_constraintWidth_percent="0.48">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@color/white">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Actividad F칤sica"
              android:textColor="@color/black"
              android:textStyle="bold" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Yoga - 18:00"
              android:textColor="@color/black"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="15 minutos"
              android:textColor="@color/black"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Iniciar ahora"
              android:textStyle="bold"
              android:textColor="@color/black"/>
        </LinearLayout>

      </com.google.android.material.card.MaterialCardView>

      <!-- Mindfulness -->
      <com.google.android.material.card.MaterialCardView
          android:id="@+id/cardMind"
          android:layout_width="165dp"
          android:layout_height="100dp"
          app:cardCornerRadius="12dp"
          app:strokeWidth="2dp"
          app:strokeColor="#2ecc71"
          android:layout_margin="1dp"
          app:layout_constraintTop_toTopOf="@id/cardActividad"
          app:layout_constraintStart_toEndOf="@id/cardActividad"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintWidth_percent="0.48">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@color/white">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Mindfulness"
              android:textColor="@color/black"
              android:textStyle="bold" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Respiraci칩n guiada"
              android:textColor="@color/black"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="5 minutos"
              android:textColor="@color/black"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Comenzar"
              android:textColor="@color/black"
              android:textStyle="bold"
              />
        </LinearLayout>
      </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="113dp"
        android:orientation="horizontal"
        android:padding="0dp">

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/inicioButton"
          android:layout_width="69dp"
          android:layout_height="69dp"
          android:layout_marginHorizontal="3dp"
          android:layout_marginTop="7dp"
          android:background="@drawable/circulo_verde"
          android:paddingHorizontal="10dp"
          android:paddingVertical="16dp"
          android:text="Inicio"
          android:textColor="@android:color/black"
          android:textSize="14dp"
          android:textStyle="bold"
          android:textAllCaps="false"/>

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/nutricionButton"
          android:layout_width="69dp"
          android:layout_height="69dp"
          android:layout_marginHorizontal="3dp"
          android:layout_marginTop="7dp"
          android:background="@drawable/botoninactivo"
          android:paddingHorizontal="1dp"
          android:paddingVertical="16dp"
          android:text="Nutrici칩n"
          android:textColor="@android:color/black"
          android:textSize="14dp"
          android:textStyle="bold"
          android:textAllCaps="false"/>

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/ejercicioButton"
          android:layout_width="69dp"
          android:layout_height="69dp"
          android:layout_marginHorizontal="3dp"
          android:layout_marginTop="7dp"
          android:background="@drawable/botoninactivo"
          android:paddingHorizontal="1dp"
          android:paddingVertical="1dp"
          android:text="Actividad"
          android:textColor="@android:color/black"
          android:textSize="14dp"
          android:textStyle="bold"
          android:textAllCaps="false"/>

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/mentalButton"
          android:layout_width="69dp"
          android:layout_height="69dp"
          android:layout_marginHorizontal="3dp"
          android:layout_marginTop="7dp"
          android:background="@drawable/botoninactivo"
          android:paddingHorizontal="1dp"
          android:paddingVertical="1dp"
          android:text="Mental"
          android:textColor="@android:color/black"
          android:textSize="14dp"
          android:textStyle="bold"
          android:textAllCaps="false"/>

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/comunidadButton"
          android:layout_width="69dp"
          android:layout_height="69dp"
          android:layout_marginHorizontal="1dp"
          android:layout_marginTop="7dp"
          android:background="@drawable/botoninactivo"
          android:paddingHorizontal="1dp"
          android:paddingVertical="1dp"
          android:text="Comunidad"
          android:textColor="@android:color/black"
          android:textSize="13dp"
          android:textStyle="bold"
          android:textAllCaps="false"/>

    </LinearLayout>

  </LinearLayout>
</ScrollView>