<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/amarillo_upn"
    android:padding="16dp">

    <!-- Barra superior -->
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#84BF41"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Botón "X" alineado a la izquierda -->
            <ImageButton
                android:id="@+id/regresomenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:contentDescription="Cerrar"
                android:clickable="true"
                android:focusable="true"
                app:tint="#FFFFFF" />

            <!-- Texto "Configuración" centrado -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Meditacion Guiada"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/circleTime"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:elevation="4dp"
        android:contentDescription="Contenedor del tiempo"
        android:layout_alignParentTop="true"
        android:backgroundTint="#D2EFB9"
        android:clipToOutline="true"
        android:outlineProvider="background" />

    <!-- Borde usando otro ImageView "encima" del anterior -->

    <!-- Timer -->

    <androidx.appcompat.widget.AppCompatImageView

        android:id="@+id/circleBorde"
        android:layout_width="231dp"
        android:layout_height="202dp"
        android:layout_alignStart="@id/circleTime"
        android:layout_alignTop="@id/circleTime"
        android:layout_alignEnd="@id/circleTime"
        android:layout_alignBottom="@id/circleTime"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/temporizador"
        android:contentDescription="Borde"
        android:scaleType="center"
        app:background="@android:color/transparent" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="133dp"
        android:text="05:00"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!-- Título -->
    <TextView
        android:id="@+id/tvreduccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reducción de Ansiedad"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@id/circleTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <!-- Descripción -->
    <TextView
        android:id="@+id/tvrespira"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Respira profundamente y enfócate\nen el momento presente."
        android:textSize="14sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_below="@id/tvreduccion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <!-- Botón circular -->
    <ImageButton
        android:id="@+id/btnPause"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@id/tvrespira"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/circulo_verde"
        android:backgroundTint="#7AC143"
        android:contentDescription="Pausar"
        android:scaleType="centerInside"
        android:src="@android:drawable/ic_media_pause"
        app:tint="#000000" />

</RelativeLayout>