<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/amarillo_upn"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Tu peso"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgBalanza"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="12dp"
        android:src="@drawable/balanza"
        android:contentDescription="Imagen de balanza"
        android:layout_marginBottom="24dp" />
    <TextView
        android:id="@+id/tvPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="70 kg"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <SeekBar
        android:id="@+id/seekBarPeso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="160"
        android:progress="70"
        android:layout_marginBottom="32dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegistrarPeso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Continuar"
        android:textAllCaps="false"
        android:textColor="@color/blanco"
        app:backgroundTint="@color/verde_botÃ³n"
        app:cornerRadius="8dp" />
</LinearLayout>
