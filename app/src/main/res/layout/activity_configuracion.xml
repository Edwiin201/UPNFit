<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarillo_upn"
    android:padding="16dp">

    <!-- ╔══════════════════════════════════════════╗ -->
    <!--              BARRA SUPERIOR                 -->
    <!-- ╚══════════════════════════════════════════╝ -->
    <androidx.cardview.widget.CardView
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#858585">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageButton
                android:id="@+id/regresomenu"
                android:layout_width="33dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Regresar"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Configuración"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- ╔══════════════════════════════════════════╗ -->
    <!--           CONTENEDOR DE OPCIONES            -->
    <!-- ╚══════════════════════════════════════════╝ -->
    <LinearLayout
        android:id="@+id/menuContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:background="@color/black"
        android:padding="8dp">

        <!-- ╔═════════ PERFIL ═════════╗ -->
        <LinearLayout
            android:id="@+id/opPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@color/amarillo_upn"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/perfil" />

            <Button
                android:id="@+id/btnmenuPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Perfil"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:background="?android:attr/selectableItemBackground"
                android:textAllCaps="false" />
        </LinearLayout>

        <!-- ╔═════════ CUENTA ═════════╗ -->
        <LinearLayout
            android:id="@+id/opCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@color/amarillo_upn"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/cuenta" />

            <Button
                android:id="@+id/btnmenuCuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Cuenta"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:background="?android:attr/selectableItemBackground"
                android:textAllCaps="false" />
        </LinearLayout>

        <!-- ╔═══════ NOTIFICACIONES ═══════╗ -->
        <LinearLayout
            android:id="@+id/opPreferencias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@color/amarillo_upn"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/notificaciones" />

            <Button
                android:id="@+id/btnmenuPreferencias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Preferencias"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:background="?android:attr/selectableItemBackground"
                android:textAllCaps="false" />
        </LinearLayout>

        <!-- ╔════════ MIS OBJETIVOS ════════╗ -->
        <LinearLayout
            android:id="@+id/opObjetivos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@color/amarillo_upn">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/objetivos" />

            <Button
                android:id="@+id/btnmenuObjetivos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Mis Objetivos"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:background="?android:attr/selectableItemBackground"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
