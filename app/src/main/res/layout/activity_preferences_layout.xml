<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/amarillo_upn"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/contenedor_preferencias"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/fondo_redondeado_gris"
        android:orientation="vertical"
        android:padding="10dp">
        <Button
            android:id="@+id/btnBackPreferences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Volver"
            android:backgroundTint="@color/blue"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>


        <!-- 1. Notificaciones motivacionales -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Notificaciones motivacionales"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switch_notifications_enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activar notificaciones" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Frecuencia" />

        <Spinner
            android:id="@+id/spinner_notification_frequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/notification_frequencies" />

        <!-- 2. Preferencias de entrenamiento -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="Preferencias de entrenamiento"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nivel de entrenamiento" />

        <RadioGroup
            android:id="@+id/radio_group_workout_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_beginner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Básico" />

            <RadioButton
                android:id="@+id/radio_intermediate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intermedio" />

            <RadioButton
                android:id="@+id/radio_advanced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avanzado" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Tipo de entrenamiento" />

        <Spinner
            android:id="@+id/spinner_workout_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/workout_types" />

        <!-- 3. Modo nocturno -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="Modo nocturno"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switch_dark_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activar modo oscuro" />

        <!-- 4. Preferencias de monitoreo de sueño -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="Monitoreo de sueño"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switch_sleep_schedule_enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activar monitoreo de sueño" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Objetivo de descanso" />

        <Spinner
            android:id="@+id/spinner_sleep_goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/sleep_goals" />

        <!-- 5. Última rutina completada -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:text="Última rutina completada"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edittext_last_workout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID de la última rutina"
            android:inputType="text" />

        <!-- Botón para guardar preferencias -->
        <Button
            android:id="@+id/button_save_preferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/fondo_redondeado_gris"
            android:clickable="true"
            android:focusable="true"
            android:text="Guardar preferencias"
            android:textColor="@color/hueso_upn"
            android:textAllCaps="false"
            android:textSize="15dp"/>


    </LinearLayout>
</ScrollView>
