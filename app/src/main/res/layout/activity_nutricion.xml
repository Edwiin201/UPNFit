<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/amarillo_upn">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <androidx.cardview.widget.CardView
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#84BF41"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <!-- Texto "Nutrición" centrado -->
                <TextView
                    android:id="@+id/tvmeditacion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Nutrición"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Botón para regresar a la pantalla de inicio -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_search"
                    app:tint="#888888" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Buscar alimentos..."
                    android:background="@android:color/transparent"
                    android:paddingStart="8dp"
                    android:textColor="#000000"
                    android:textColorHint="#AAAAAA"
                    android:inputType="text" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Resumen calórico -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="#F0F0ED">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resumen calórico"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calorías"
                            android:textSize="12sp"
                            android:textColor="#555" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1200"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#E67E22" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Proteínas"
                            android:textSize="12sp"
                            android:textColor="#555" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80g"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#27AE60" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grasas"
                            android:textSize="12sp"
                            android:textColor="#555" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45g"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#C0392B" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carbs"
                            android:textSize="12sp"
                            android:textColor="#555" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="160g"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#2980B9" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Plan de hoy -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plan del día"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <!-- Contenedor horizontal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <!-- Agua -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agua"
                            android:textSize="12sp"
                            android:textColor="#555" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.5 / 2L"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#2980B9" />
                    </LinearLayout>

                    <!-- Comidas -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comidas"
                            android:textSize="12sp"
                            android:textColor="#555" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 / 3"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#27AE60" />
                    </LinearLayout>

                    <!-- Snacks -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Snacks"
                            android:textSize="12sp"
                            android:textColor="#555" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 / 2"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#E67E22" />
                    </LinearLayout>

                    <!-- Suplemento -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Suplemento"
                            android:textSize="12sp"
                            android:textColor="#555" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tomado"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#8E44AD" />
                    </LinearLayout>

                    <!-- Última comida -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Últ. comida"
                            android:textSize="12sp"
                            android:textColor="#555" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="13:20"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#C0392B" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Botones de selección de comida -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnDesayuno"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="Desayuno"
                    android:textAllCaps="false"
                    app:cornerRadius="20dp"
                    app:backgroundTint="#84BF41"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="8dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAlmuerzo"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="Almuerzo"
                    android:textAllCaps="false"
                    app:cornerRadius="20dp"
                    app:backgroundTint="#84BF41"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCena"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="Cena"
                    android:textAllCaps="false"
                    app:cornerRadius="20dp"
                    app:backgroundTint="#84BF41"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="8dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnSnacks"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="Snacks"
                    android:textAllCaps="false"
                    app:cornerRadius="20dp"
                    app:backgroundTint="#84BF41"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Texto de título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recomendado para ti"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp" />

        <!-- Tarjetas de recomendaciones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ensaladadeliciosa"
                        android:background="@drawable/recomendado" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ensalada Nutritiva"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#E74C3C"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/salmonhorneado"
                        android:background="@drawable/recomendado" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salmón al horno"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#2ECC71"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:padding="0dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/inicioButton"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/botoninactivo"
                android:paddingHorizontal="10dp"
                android:paddingVertical="16dp"
                android:text="Inicio"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nutricionButton"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/circulo_verde"
                android:paddingHorizontal="10dp"
                android:paddingVertical="16dp"
                android:text="Nutrición"
                android:textColor="@android:color/black"
                android:textSize="9dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ejercicioButton"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/botoninactivo"
                android:paddingHorizontal="10dp"
                android:paddingVertical="16dp"
                android:text="Actividad"
                android:textColor="@android:color/black"
                android:textSize="9dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mentalButton"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/botoninactivo"
                android:paddingHorizontal="10dp"
                android:paddingVertical="16dp"
                android:text="Mental"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/comunidadButton"
                android:layout_width="69dp"
                android:layout_height="69dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/botoninactivo"
                android:paddingHorizontal="10dp"
                android:paddingVertical="16dp"
                android:text="Comunidad"
                android:textColor="@android:color/black"
                android:textSize="8dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
